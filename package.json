{
  "name": "workspace-root",
  "version": "1.2.4",
  "private": true,
  "description": "Workspace root for @codemod-utils",
  "repository": {
    "type": "git",
    "url": "git@github.com:ijlee2/codemod-utils.git"
  },
  "license": "MIT",
  "author": "Isaac J. Lee",
